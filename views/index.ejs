    <div class="EmployeesList">
      <% Employees.forEach(function(employee){%>
      <div class="emp-box">
        <p><span>Name:</span><%= employee.name %></p>
        <p><span>Email:</span><%= employee.email %></p>
        <p><span>Mobile No.:</span><%= employee.mobileNo %></p>
        <p><span>Address:</span><%= employee.Address %></p>
        <% employee.Skills.forEach(function(skill){%>
        <p>
          <span>Skill:</span> <%= skill.skill %>
          <span>Rating:</span> <%=skill.rating%>
        </p>
        <%})%>
        <div style="width: 100%; border-bottom: 2px solid black"></div>
      </div>
      <%})%>
    </div>
